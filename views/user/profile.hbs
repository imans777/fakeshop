<div class="row">
    <div class="col-md-2 col-sm-4" style="margin-top: 20px;">
        <img src="{{user.image}}" style="border-radius: 100px; height: 10em;">
    </div>
    <div class="col-md-8 col-sm-8">
        <h1>User Setting</h1>
        <hr>
        <div id="charge-error" class="alert {{#if hasErrorSetting}}alert-danger{{else}}alert-success{{/if}} {{#if hasSomething}}hidden{{/if}}">
            {{errMsgSetting}}
        </div>
        <form action="/user/setting" method="post">
            <div class="form-group">
                <label for="username">Username: <strong style="color: blue;"><a href="/user/account">{{user.username}}</a></strong></label>
            </div>
            <div class="form-group">
                <label for="username">E-mail: <strong style="color: blue;"><a href="mailto:{{ user.email }}">{{user.email}}</a></strong></label>
            </div>
            <div class="row">
                <div class="form-group col-md-5">
                    <label for="age">Age:</label>
                    <input type="number" id="age" name="age" class="form-control" size="2" value="{{ user.age }}">
                </div>
                <div class="form-group col-md-5 col-md-offset-2">
                    <label for="sex">Gender:</label>
                    <div class="row" style="margin-top: 8px;">
                        <div class="col-md-4 col-md-offset-1 form-check">
                            <input type="radio" id="sex" name="sex" value="male" {{# if isMan}}checked{{/if}}><strong> Male</strong>
                        </div>
                        <div class="col-md-4 col-md-offset-1">
                            <input type="radio" id="sex" name="sex" value="female" {{# if isWoman}}checked{{/if}}><strong> Female</strong>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <div class="input-group input-group-btn">
                    <textarea type="text" id="description" name="description" class="form-control"
                              style="border-radius: 5px" rows="4">{{ user.description }}</textarea>
                </div>

            </div>
            <br>
            <button type="submit" class="btn btn-primary btn-lg">Confirm Changes</button>
        </form>
    </div>
</div>