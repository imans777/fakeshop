<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>Add A New Product</h1>
        <hr>
        <div id="charge-error" class="alert {{#if hasError}}alert-danger{{else}}alert-success{{/if}} {{#if hasSomething}}hidden{{/if}}">
            {{errMsgSetting}}
        </div>
        <form action="/add-product" method="post">

            <div class="form-group row">
                <label for="imageurl" class="col-md-2 col-form-label pro-label">Image URL: </label>
                <div class="col-md-10">
                    <input class="form-control" type="text" id="imageurl" name="imageurl">
                </div>
            </div>
            <div class="form-group row">
                <label for="title" class="col-md-2 col-form-label pro-label">Title: </label>
                <div class="col-md-10">
                    <input class="form-control" type="text" id="title" name="title" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="description" class="col-md-2 col-form-label pro-label">Description: </label>
                <div class="col-md-10">
                    <textarea type="text" id="description" name="description" class="form-control"
                              style="border-radius: 5px; resize: vertical;" rows="4"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <label for="price" class="col-md-2 col-form-label pro-label">Price:</label>
                <div class="col-md-3">
                    <input type="number" id="price" name="price" class="form-control" required>
                </div>
                <div class="col-form-label pro-label">$</div>
            </div>
            <button type="submit" class="btn btn-primary btn-lg col-md-6 col-md-offset-3">Add Product</button>
        </form>
    </div>
</div>